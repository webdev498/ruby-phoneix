<%= simple_form_for(@customer_allergy) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :dept_number %>
    <%= f.input :rna_customer_id_number %>
    <%= f.input :customer_allergy_code %>
    <%= f.input :allergy_type %>
    <%= f.input :allergy_description %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
