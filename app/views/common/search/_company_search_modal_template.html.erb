<div class="phx-modal containter-fluid" id="companySearchModal" role="dialog" aria-hidden="true">

	<div class="modal-dialog">
		<div class="modal-content">

			<div class="modal-header">
				<h3>Company Search</h3>
			</div>

			<div class="modal-body">
				<% choice = 0 %>
				<table class="table-hover">
		  		<thead class="phx-search-row-header">
 		  			<tr>
						<th class="phx-search-font"><input type="text" id="companySearchModal_Keys1_9" style="width:0.1px;" ></th>
						<th class="phx-search-font">Active</th>
						<th class="phx-search-font">Number</th>
						<th class="phx-search-font">Name</th>
						<th class="phx-search-font">Description</th>
						<th class="phx-search-font">City</th>
						<th class="phx-search-font">State</th>
		  		  </tr>
  				</thead>

					<tbody>
						<% searchCompanies.each do |company| %>

							<% companySearchRowId = "companyRow" + (choice += 1).to_s %>
							<tr	id="<%=companySearchRowId%>"
									class="phx-search-row clickable-companyRow"
									data-phx-search-company-id="<%= company.id %>"
									data-phx-search-company-name="<%= company.display_name %>" >

								<td class="phx-search-font" > <%= choice %> </td>
								<td class="phx-search-font"> <%= company.active %> </td>
								<td class="phx-search-font"> <%= company.number %> </td>
								<td class="phx-search-font"> <%= company.name %> </td>
								<td class="phx-search-font"> <%= company.description %>&nbsp;, </td>
								<td class="phx-search-font"> <%= company.city %> </td>
								<td class="phx-search-font"> <%= company.state %> </td>
							</tr>
						<% end %> <!-- END OF company list -->
					</tbody>
				</table>
			</div> <!-- end of modal-body -->

			</br>

			<div class="modal-footer">
				<%= paginate searchCompanies,
						params: { controller: "companies", action: "nextCompanies"} , remote: true  unless searchCompanies.empty? %>

				<%# THERE MUST ALWAYS BE A CLOSE BUTTONS %>
				<button id="company_modal_close_btn"
						class="btn btn-sm btn-default phx-btn-model-control-red"
						data-dismiss="modal"
						aria-hidden="true">
						Close</button>
			</div>

		</div>  <!-- end of modal-content -->

	</div>  <!-- end of modal-dialog -->

	<script>

		<%= phx_search_modal_javascript "company" %>

	</script>

</div>
