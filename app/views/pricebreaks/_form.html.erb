<%= simple_form_for(@pricebreak) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :dept_number %>
    <%= f.input :schedule_number %>
    <%= f.input :pct_or_amount, collection: Pricebreak.pct_or_amounts.keys,:selected => Pricebreak.pct_or_amounts.keys[@pricebreak[:pct_or_amount].to_i] %>
    <%= f.input :break_limit %>
    <%= f.input :markup_pct %>
    <%= f.input :markup_amount %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
