  </div> 
  <div class="field">
    <%= f.label :alert_source %><br>
    <%= f.text_field :alert_source %>
  </div>
  <div class="field">
    <%= f.label :event_type %><br>
    <%= f.text_field :event_type %>
  </div>
  <div class="field">
    <%= f.label :event_time %><br>
    <%= f.datetime_select :event_time %>
  </div>
  <div class="field">
    <%= f.label :event_severity %><br>
    <%= f.text_field :event_severity %>
  </div>
  <div class="field">
    <%= f.label :message %><br>
    <%= f.text_field :message %>
  </div>
  <div class="field">
    <%= f.label :viewed %><br>
    <%= f.check_box :viewed %>
  </div>
  <div class="field">
    <%= f.label :viewed_by %><br>
    <%= f.text_field :viewed_by %>
  </div>
  <div class="field">
    <%= f.label :uuid %><br>
    <%= f.text_field :uuid %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
