<%= simple_form_for(@pos_payment_method) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :dept_number %>
    <%= f.input :payment_method_code %>
    <%= f.input :payment_method_description %>
    <%= f.input :payment_method_processing_pct %>
    <%= f.input :merchant_id_number %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
