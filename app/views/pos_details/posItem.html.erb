<% provide(:pos_item, "active") %>

<%= form_for( @pos_item ) do |f| %>

    <div class="col-lg-10 phx-working-area-background">

      <!-- working area title and nav -->
      <div class="row span10 phx-working-area-nav">
        <div class="col-xs-1 phx-hamburger-box">
          <button class="phx-hamburger">|||</button>
        </div>

        <div style="height:50px;">
          <row>
            <div class="col-lg-8">
              <div class="phx-working-area-title">POS Item Maintenance
              </div>
            </div>
            <div class="col-lg-3 phx-working-area-title-buttons">
              <p>
                <button type="button" class="btn btn-sm btn-default phx-btn-model-control-white">Back</button>
                <button type="button" class="btn btn-sm btn-default phx-btn-model-control-white">Show</button>
                <button type="button" class="btn btn-sm btn-default phx-btn-model-control-red">Update</button>
              </p>
            </div>
          </row>
        </div>

        <!-- working area -->
        <div class="containter-fluid" style="padding-top:30px;">

          <!-- Primary Info -->
          <div class="col-lg-4">

            <div class="phx-primary-info-column">

              <div class="field form-group phx-input-control">
                <label class="phx-form-control-label" for="active_flag">Active</label>
                <%= f.check_box :active_flag, class: 'phx-form-control' %>
              </div>


              <div class="field form-group phx-input-control">
                <label class="phx-form-control-label" for="dept_number">Department</label>
                <%= f.text_field :dept_number, class: 'phx-form-control' %>
              </div>

              <div class="field form-group phx-input-control">
                <label class="phx-form-control-label" for="product_number">Product Number</label>
                <%= f.text_field :product_number, class: 'phx-form-control' %>
              </div>

              <div class="field form-group phx-input-control">
                <label class="phx-form-control-label" for="product_description">Description</label>
                <%= f.text_field :product_description, class: 'phx-form-control' %>
              </div>

              <div class="field form-group phx-input-control">
                <label class="phx-form-control-label" for="product_category">Category</label>
                <%= f.text_field :product_category, class: 'phx-form-control' %>
              </div>

              <div class="field form-group phx-input-control">
                <label class="phx-form-control-label" for="product_unit_cost">Cost</label>
                <%= f.text_field :product_unit_cost, class: 'phx-form-control' %>
              </div>

              <div class="field form-group phx-input-control">
                <label class="phx-form-control-label" for="product_price">Price</label>
                <%= f.text_field :product_price, class: 'phx-form-control' %>
              </div>

              <div class="field form-group phx-input-control">
                <label class="phx-form-control-label" for="price_last_updated">Price Last Updated</label>
                <%= f.text_field :price_last_updated, class: 'phx-form-control' %>
              </div>

              <div class="field form-group phx-input-control">
                <label class="phx-form-control-label" for="last_order_date">Last Order Date</label>
                <%= f.text_field :last_order_date, class: 'phx-form-control' %>
              </div>

              <div class="field form-group phx-input-control">
                <label class="phx-form-control-label" for="last_sold_date">Last Sold Date</label>
                <%= f.text_field :last_sold_date, class: 'phx-form-control' %>
              </div>

              <div class="field form-group phx-input-control">
                <label class="phx-form-control-label" for="total_sold">Total Sold</label>
                <%= f.text_field :total_sold, class: 'phx-form-control' %>
              </div>

              <div class="field form-group phx-input-control">
                <label class="phx-form-control-label" for="primary_vendor_code">Primary Vendor</label>
                <%= f.text_field :primary_vendor_code, class: 'phx-form-control' %>
              </div>

            </div> <!-- end of container fluid for Primary Info -->

          </div> <!-- end of Primary Info col lg def -->

          <div class="col-lg-8">
          </div>
        </div>
      </div>
    </div>
<% end %>