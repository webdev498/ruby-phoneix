<h1>Listing licenses</h1>

<table>
  <thead>
    <tr>
      <th>Dept number</th>
      <th>License title</th>
      <th>License text</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @licenses.each do |license| %>
      <tr>
        <td><%= license.dept_number %></td>
        <td><%= license.license_title %></td>
        <td><%= license.license_text %></td>
        <td><%= link_to 'Show', license %></td>
        <td><%= link_to 'Edit', edit_license_path(license) %></td>
        <td><%= link_to 'Destroy', license, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New License', new_license_path %>
