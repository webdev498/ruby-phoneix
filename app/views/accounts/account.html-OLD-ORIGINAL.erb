									<%= phx_checkbox_for f, :allow_otc_charges , "Allow OTC Charges" %>
</br>
									<div class="field form-group phx-input-control">
											<label class="phx-form-control-label" for="last_payment_amount">Last Payment Amount</label>
											<%= f.text_field :last_payment_amount, class: 'phx-form-control'  %>
									</div>

									<div class="field form-group phx-input-control">
											<label class="phx-form-control-label" for="last_payment_date">Last Payment Dates</label>
											<%= f.text_field :last_payment_date, class: 'phx-form-control'  %>
									</div>

									<div class="field form-group phx-input-control">
											<label class="phx-form-control-label" for="past_due_letter_sent">Past Due Letter Sent</label>
											<%= f.text_field :past_due_letter_sent, class: 'phx-form-control'  %>
									</div>


									<div class="field form-group phx-input-control">
											<label class="phx-form-control-label" for="high_past_due_amount">High Past Due Amount</label>
											<%= f.text_field :high_past_due_amount, class: 'phx-form-control'  %>
									</div>

									<div class="field form-group phx-input-control">
											<label class="phx-form-control-label" for="non_deductible_amount_year_to_date">Total Non-Medical YTD</label>
											<%= f.text_field :non_deductible_amount_year_to_date, class: 'phx-form-control'  %>
