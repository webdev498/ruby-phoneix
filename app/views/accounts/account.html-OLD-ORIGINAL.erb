			<li class="active"><a href="#generalPane" role="tab" data-toggle="tab">General Info</a></li>
		</ul>

		<!-- Tab panes -->
		<div class="tab-content phx-tab-pane">

					<div class="tab-pane active" id="generalPane">

						<div class="container-fluid">

							<row>

								<!-- GENERAL INFO, first column -->
								<div class="container-fluid col-lg-4">

									<%= phx_checkbox_for f, :print_statement , "Print Statement?" %>
</br>
									<div class="field form-group phx-input-control">
											<label class="phx-form-control-label" for="last_charge_amount">Last Charge Amount</label>
											<%= f.text_field :last_charge_amount, class: 'phx-form-control'  %>
									</div>

									<div class="field form-group phx-input-control">
											<label class="phx-form-control-label" for="last_statement_date">Last Statement Date</label>
											<%= f.text_field :last_statement_date, class: 'phx-form-control'  %>
									</div>

									<div class="field form-group phx-input-control">
											<label class="phx-form-control-label" for="last_past_due_date">Last Past Due Date</label>
											<%= f.text_field :last_past_due_date, class: 'phx-form-control'  %>
									</div>
									<div class="field form-group phx-input-control">
											<label class="phx-form-control-label" for="high_balance_amount">High Balance Amount</label>
											<%= f.text_field :high_balance_amount, class: 'phx-form-control'  %>
									</div>

									<div class="field form-group phx-input-control">
											<label class="phx-form-control-label" for="tax_deductible_amount_year_to_date">Total Medical YTD</label>
											<%= f.text_field :tax_deductible_amount_year_to_date, class: 'phx-form-control'  %>
									</div>
									<div class="field form-group phx-input-control">
											<label class="phx-form-control-label" for="finance_charges_year_to_date">Finance Charges YTD</label>
											<%= f.text_field :finance_charges_year_to_date, class: 'phx-form-control'  %>
									</div>
									<div class="field form-group phx-input-control">
											<label class="phx-form-control-label" for="credit_limit">Credit Limit</label>
											<%= f.text_field :credit_limit, class: 'phx-form-control'  %>
									</div>

									<div class="field form-group phx-input-control">
											<label class="phx-form-control-label" for="rx_charge_description">Rx Charge Description</label>
											<%= f.text_field :rx_charge_description, class: 'phx-form-control'  %>
									</div>

									<div class="field form-group phx-input-control">
											<label class="phx-form-control-label" for="number_times_past_30">Number Times Past 30</label>
											<%= f.text_field :number_times_past_30, class: 'phx-form-control'  %>
									</div>

									<div class="field form-group phx-input-control">
											<label class="phx-form-control-label" for="number_times_past_90">Number Times Past 90</label>
											<%= f.text_field :number_times_past_90, class: 'phx-form-control'  %>
									</div>

									<div class="field form-group phx-input-control">
											<label class="phx-form-control-label" for="memo">Memo</label>
											<%= f.text_field :memo, class: 'phx-form-control'  %>

									<div class="form-group phx-input-control-spacer">
									</div>

									</div>
							</div> <!-- END OF first panel, first column -->

								<!-- GENERAL INFO panel, second column -->
